<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F6F5F5"
    android:layout_height="match_parent"
    tools:context=".ui.repost.ShareFragment">
    <ImageView
        android:id="@+id/shareBackIcon"
        android:layout_marginTop="27dp"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:fontFamily="@font/myfont"
        android:text="Repost"
        android:textColor="#2B2929"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="540dp"
        android:id="@+id/cardView"
        app:cardElevation="3dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="match_parent"
                android:layout_height="375dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="25dp"
                app:cardCornerRadius="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/repostshare"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/play_ic"
                android:layout_marginStart="60dp"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_play_arrow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView2" />

            <TextView
                android:id="@+id/play_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="29,4K"
                android:layout_marginStart="7dp"
                android:textSize="15sp"
                android:layout_marginTop="16dp"
                android:textStyle="bold"
                android:textColor="#36393f"
                android:fontFamily="@font/myfont"
                app:layout_constraintStart_toEndOf="@+id/play_ic"
                app:layout_constraintTop_toBottomOf="@+id/cardView2" />

            <TextView
                android:id="@+id/play_bottom_text"
                android:layout_width="wrap_content"
                android:layout_marginTop="-5dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_marginStart="11dp"
                app:layout_constraintTop_toBottomOf="@id/play_text"
                android:text="views"
                app:layout_constraintStart_toEndOf="@+id/play_ic" />

            <ImageView
                android:id="@+id/comment_id"
                android:layout_marginStart="65dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_comment"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/play_ic" />

            <TextView
                android:id="@+id/comment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3,7K"
                android:layout_marginStart="14dp"
                android:textSize="15sp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textColor="#36393f"
                android:fontFamily="@font/myfont"
                app:layout_constraintStart_toEndOf="@+id/comment_id"
                app:layout_constraintTop_toBottomOf="@+id/play_bottom_text" />

            <TextView
                android:id="@+id/commet_bottom_text"
                android:layout_width="wrap_content"
                android:layout_marginTop="-5dp"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toBottomOf="@id/comment_text"
                android:text="Comments"
                app:layout_constraintStart_toEndOf="@+id/comment_id" />


            <ImageView
                android:id="@+id/fav_ic"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="120dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_favorite"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView2" />
            <TextView
                android:id="@+id/like_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4391"
                android:layout_marginStart="10dp"
                android:textSize="15sp"
                android:layout_marginTop="16dp"
                android:textStyle="bold"
                android:textColor="#36393f"
                android:fontFamily="@font/myfont"
                app:layout_constraintStart_toEndOf="@+id/fav_ic"
                app:layout_constraintTop_toBottomOf="@+id/cardView2" />

            <TextView
                android:id="@+id/fav_bottom_text"
                android:layout_width="wrap_content"
                android:layout_marginTop="-4dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_marginStart="13dp"
                app:layout_constraintTop_toBottomOf="@id/like_text"
                android:text="Likes"
                app:layout_constraintStart_toEndOf="@+id/fav_ic" />
            <ImageView
                android:id="@+id/share_ic"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="120dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_share"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fav_ic" />
            <TextView
                android:id="@+id/share_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="219"
                android:layout_marginStart="15dp"
                android:textSize="15sp"
                android:layout_marginTop="11dp"
                android:textStyle="bold"
                android:textColor="#36393f"
                android:fontFamily="@font/myfont"
                app:layout_constraintStart_toEndOf="@+id/share_ic"
                app:layout_constraintTop_toBottomOf="@+id/fav_bottom_text" />

            <TextView
                android:id="@+id/share_bottom_text"
                android:layout_width="wrap_content"
                android:layout_marginTop="-4dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_marginStart="11dp"
                app:layout_constraintTop_toBottomOf="@id/share_text"
                android:text="Shares"
                app:layout_constraintStart_toEndOf="@+id/fav_ic" />


        </androidx.constraintlayout.widget.ConstraintLayout>





    </androidx.cardview.widget.CardView>


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/nextButton"
        android:backgroundTint="#6271ff"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/text_back"
        android:fontFamily="@font/myfont"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />


</androidx.constraintlayout.widget.ConstraintLayout>