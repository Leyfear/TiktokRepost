<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.onboarding.screens.ThirdScreen">
    <ImageView
        android:id="@+id/thirdPageImage"
        android:layout_width="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="30dp"
        android:scaleType="fitCenter"
        android:layout_height="250dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/page3s"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/thirdPageHeadline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/myfont"
        android:text="Lorem Ipsum Dolor"
        android:textColor="#3e3e3e"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/thirdPageImage" />

    <TextView
        android:id="@+id/thirdPageText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="25dp"
        android:fontFamily="@font/myfont"
        android:text="Lorem ipsum dolor sit amet, quam sodales eget nulla. Tempus elit, viverra vel gravida lacinia."
        android:textColor="#7e7f85"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/thirdPageHeadline" />


</androidx.constraintlayout.widget.ConstraintLayout>