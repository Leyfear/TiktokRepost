<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.onboarding.screens.SecondScreen">

    <ImageView
        android:id="@+id/secondPageImage"
        android:layout_width="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="30dp"
        android:layout_height="250dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/page2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/secondPageHeadline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/myfont"
        android:textColor="#3e3e3e"
        android:layout_marginStart="20dp"
        android:text="Lorem Ipsum Dolor"
        android:textSize="25sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/secondPageImage" />

    <TextView
        android:id="@+id/secondPageText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/myfont"
        android:text="Lorem ipsum dolor sit amet, quam sodales eget nulla. Tempus elit, viverra vel gravida lacinia."
        android:textColor="#7e7f85"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/secondPageHeadline" />

</androidx.constraintlayout.widget.ConstraintLayout>