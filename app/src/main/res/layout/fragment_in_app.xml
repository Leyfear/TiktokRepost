<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.inapp.InAppFragment">


    <ImageView
        android:id="@+id/inAppImage"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:src="@drawable/inappres"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/closeButton" />

    <ImageView
        android:id="@+id/closeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:id="@+id/textLayout1"
    android:layout_height="150dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/inAppImage"
    android:layout_marginStart="30dp"
    android:layout_marginTop="28dp"
    android:layout_marginEnd="30dp">

    <TextView
        android:id="@+id/planId"
        android:fontFamily="@font/myfont"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/week_plan"
        android:textSize="18sp"
        android:textColor="#333232"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/planCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/myfont"
        android:text="$2.99"
        android:textSize="18dp"
        android:layout_marginTop="2dp"
        android:textColor="#333232"
        app:layout_constraintTop_toBottomOf="@id/planId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:layout_marginTop="2dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/myfont"
        android:gravity="center"
        android:textColor="#333232"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Lorem İpsum dolar sit elic concicular ipsum."
        app:layout_constraintTop_toBottomOf="@id/planCost"/>


    <TextView
        android:id="@+id/offerText1"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="match_parent"
        android:background="@drawable/roundedunselected"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/textLayout2"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textLayout1"
        android:layout_marginStart="30dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="30dp">

        <TextView
            android:id="@+id/planId2"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:fontFamily="@font/myfont"
            android:layout_height="wrap_content"
            android:text="Year Plan"
            android:textSize="18sp"
            android:textColor="#333232"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/planCost2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$49.99"
            android:textSize="18sp"
            android:layout_marginTop="2dp"
            android:textColor="#333232"
            android:fontFamily="@font/myfont"
            app:layout_constraintTop_toBottomOf="@id/planId2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:layout_marginTop="2dp"
            android:fontFamily="@font/myfont"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:textColor="#333232"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Lorem İpsum dolar sit elic concicular ipsum."
            app:layout_constraintTop_toBottomOf="@id/planCost2"/>


        <TextView
            android:id="@+id/offerText2"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="match_parent"
            android:background="@drawable/roundedunselected"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:id="@+id/nextButton"
        android:layout_marginStart="73dp"
        android:layout_marginEnd="73dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/text_back"
        android:fontFamily="@font/myfont"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="@color/white"

        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textLayout2" />


</androidx.constraintlayout.widget.ConstraintLayout>